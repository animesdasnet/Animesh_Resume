
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>
<div>
    <form action="Register" method="post">
        <input type="text" class="form-control" placeholder="FirstName" name="FirstName" asp-for="FirstName" />
        <br />
        <input type="text" class="form-control" placeholder="LastName" name="LastName" asp-for="LastName" />
        <br />
        <input type="text" class="form-control" placeholder="Email" name="Email" asp-for="Email" />
        <br />
        <input type="number" class="form-control" placeholder="PhoneNumber" name="PhoneNumber" asp-for="PhoneNumber"> 
        <br />
        <input type="submit" class="form-control" placeholder="submit">
    </form>
</div>
